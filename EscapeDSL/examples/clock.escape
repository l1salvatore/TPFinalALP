target maindoor {
    unlock: 438
}

target hour {
    unlock: 3
}

target minute {
    unlock: 30
}

item Wallclock {
    elements {
        hour,
        minute
    }

    onuse {
        if hour is unlocked and minute is unlocked -> show "the door key is 438"
    }
}

item hint {
    onuse {
        show "Adjust the watch to 3:30 to open the door"
    }
}

game {
   maindoor,
   wallclock,
   hint
}